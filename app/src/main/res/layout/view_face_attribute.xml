<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout style="@style/item_attribute">

            <TextView
                style="@style/item_attribute_text"
                android:text="年         龄" />

            <TextView
                android:id="@+id/attribute_age"
                style="@style/item_attribute_text2"
                tools:text="年龄年龄年龄年龄年龄年龄年龄年龄年" />
        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout style="@style/item_attribute">

            <TextView
                style="@style/item_attribute_text"
                android:text="性         别" />

            <TextView
                android:id="@+id/attribute_gender"
                style="@style/item_attribute_text2"
                tools:text="年龄年龄年龄年龄年龄年龄年龄年龄年" />
        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout style="@style/item_attribute">

            <TextView
                style="@style/item_attribute_text"
                android:text="情         绪" />

            <TextView
                android:id="@+id/attribute_emotion"
                style="@style/item_attribute_text2"
                tools:text="年龄年龄年龄年龄年龄年龄年龄年龄年" />
        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout style="@style/item_attribute">

            <TextView
                style="@style/item_attribute_text"
                android:text="头部姿态" />

            <TextView
                android:id="@+id/attribute_head"
                style="@style/item_attribute_text2"
                tools:text="年龄年龄年龄年龄年龄年龄年龄年龄年" />
        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout style="@style/item_attribute">

            <TextView
                style="@style/item_attribute_text"
                android:text="嘴部姿态" />

            <TextView
                android:id="@+id/attribute_mouth"
                style="@style/item_attribute_text2"
                tools:text="年龄年龄年龄年龄年龄年龄年龄年龄年" />
        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout style="@style/item_attribute">

            <TextView
                style="@style/item_attribute_text"
                android:text="左眼状态" />

            <TextView
                android:id="@+id/attribute_left_eye"
                style="@style/item_attribute_text2"
                tools:text="年龄年龄年龄年龄年龄年龄年龄年龄年" />
        </LinearLayout>

        <include layout="@layout/view_line" />

        <LinearLayout style="@style/item_attribute">

            <TextView
                style="@style/item_attribute_text"
                android:text="右眼状态" />

            <TextView
                android:id="@+id/attribute_right_eye"
                style="@style/item_attribute_text2"
                tools:text="年龄年龄年龄年龄年龄年龄年龄年龄年" />
        </LinearLayout>

        <include layout="@layout/view_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/error_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:padding="30dp"
        android:text="一张图片能检测出所有的人脸，但是最多只能分析5张人脸。"
        android:textColor="@color/translucent_black_50"
        android:textSize="18sp" />

</FrameLayout>
